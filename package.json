{
  "name": "readymade-starter",
  "version": "1.0.0",
  "description": "Starter code for a site built with Readymade",
  "repository": "git@github.com:readymade-ui/starter.git",
  "author": "Steve Belovarich <steveblue@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "npm run dev",
    "dev": "NODE_ENV=development parcel src/client/index.html --hmr-port 1235 --port 4444",
    "prod": "NODE_ENV=production rimraf dist && npm run build:prod",
    "serve": "node dist/server",
    "build:prod": "npm run prod:ssr && npm run prod:index && concurrently \"npm run prod:client\" \"npm run prod:server\"",
    "prod:client": "parcel build src/client/prod.html -d dist/client --public-url /dist/client --no-source-maps --out-file=index.html",
    "prod:server": "parcel build src/server/index.ts -d dist/server --public-url /dist --target=node --no-source-maps",
    "prod:ssr": "rollup -c rollup.config.ssr.js",
    "prod:index": "rollup -c rollup.config.js",
    "pretty:check": "prettier \"src/**/*.{js,ts,html,css,scss}\" --check",
    "pretty": "prettier \"src/**/*.{js,ts,html,css,scss}\" --write",
    "lint": "eslint src/**/*.ts --fix"
  },
  "dependencies": {
    "@corpuscule/custom-builtin-elements": "^0.3.0",
    "@readymade/core": "^1.0.1",
    "@skatejs/ssr": "^0.19.11",
    "broadcastchannel-polyfill": "^1.0.0",
    "chalk": "^3.0.0",
    "compression": "^1.7.4",
    "concurrently": "^5.1.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "http": "^0.0.0",
    "https": "^1.0.0",
    "parcel-plugin-css-as-string": "^1.0.0",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@types/node": "^13.7.4",
    "@typescript-eslint/eslint-plugin": "^2.19.2",
    "@typescript-eslint/parser": "^2.19.2",
    "autoprefixer": "^9.7.4",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "parcel-bundler": "1.12.3",
    "prettier": "^1.19.1",
    "rollup": "^1.31.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^2.0.6",
    "rollup-plugin-string": "^3.0.0",
    "rollup-plugin-typescript2": "^0.26.0",
    "sass": "^1.25.0",
    "typescript": "^3.7.5"
  },
  "browserslist": [
    ">2%",
    "Edge > 14",
    "Firefox > 63",
    "Chrome > 67"
  ]
}