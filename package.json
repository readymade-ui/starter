{
  "name": "readymade-starter",
  "version": "1.0.0",
  "description": "Starter code for a site built with Readymade",
  "repository": "git@github.com:readymade-ui/starter.git",
  "author": "Steve Belovarich <steveblue@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "concurrently \"npm run dev\" \"npm run dev:server\"",
    "dev": "NODE_ENV=development parcel serve src/client/index.html --port 4444 --open \"google chrome\" --hmr-port 8080",
    "prod": "NODE_ENV=production npm run clean:dist && npm run build:prod",
    "dev:server": "NODE_ENV=development node watch.js",
    "serve:config": "tsc ./src/server/config.js --outDir ./dist --module CommonJS --allowJS && mkdir -p ./dist/server/src/server && cp ./dist/config.js ./dist/server/src/server/config.js",
    "serve:dev": "NODE_ENV=development node dist/server",
    "serve": "NODE_ENV=production node dist/server",
    "clean:dist": "rimraf dist",
    "build:prod": "npm run prod:ssr && npm run prod:index && concurrently \"npm run prod:client\" \"npm run prod:server\"",
    "prod:client": "parcel build src/client/prod.html -d dist/client --no-source-maps --out-file=index.html",
    "prod:server": "npm run serve:config && parcel build src/server/index.ts -d dist/server --public-url /dist --target=node --no-source-maps",
    "prod:ssr": "NODE_ENV=production rollup -c rollup.config.ssr.js",
    "prod:index": "NODE_ENV=production rollup -c rollup.config.js",
    "preinstall": "npx npm-force-resolutions",
    "pretty:check": "prettier \"src/**/*.{js,ts,html,css,scss}\" --check",
    "pretty": "prettier \"src/**/*.{js,ts,html,css,scss}\" --write",
    "lint": "eslint src/**/*.ts --fix"
  },
  "dependencies": {
    "@corpuscule/custom-builtin-elements": "^0.3.0",
    "@readymade/core": "^2.0.0-beta.3",
    "@readymade/dom": "^2.0.0-beta.3",
    "@readymade/router": "^2.0.0-beta.3",
    "@skatejs/ssr": "^0.19.11",
    "@ungap/custom-elements": "^0.1.10",
    "broadcastchannel-polyfill": "^1.0.0",
    "chalk": "^3.0.0",
    "compression": "^1.7.4",
    "concurrently": "^5.1.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "html-minifier-terser": "^5.1.1",
    "http": "^0.0.0",
    "https": "^1.0.0",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@rollup/plugin-typescript": "^4.1.1",
    "@types/node": "^13.13.36",
    "@typescript-eslint/eslint-plugin": "^2.19.2",
    "@typescript-eslint/parser": "^2.19.2",
    "autoprefixer": "^9.7.4",
    "chokidar": "^3.4.0",
    "cssnano": "^4.1.10",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.3.0",
    "node-sass": "^5.0.0",
    "parcel-bundler": "^1.12.4",
    "parcel-plugin-css-as-string": "^1.0.1",
    "parcel-plugin-externals": "^0.4.0",
    "parcel-plugin-inliner": "^1.0.14",
    "prettier": "^1.19.1",
    "rollup": "^1.31.1",
    "rollup-plugin-postcss": "^3.1.1",
    "rollup-plugin-string-html": "^1.0.0",
    "tslib": "^2.0.3",
    "typescript": "^3.7.5"
  },
  "browserslist": [
    ">2%",
    "Edge > 14",
    "Firefox > 63",
    "Chrome > 67"
  ],
  "externals": [
    "./src/server/config.js"
  ],
  "resolutions": {
    "node-forge": "0.10.0"
  }
}