{
  "name": "readymade-starter",
  "version": "3.0.0-beta.0",
  "description": "Starter code for a site built with Readymade",
  "repository": "git@github.com:readymade-ui/starter.git",
  "author": "Steve Belovarich <steveblue@gmail.com>",
  "license": "MIT",
  "type": "module",
  "main": "index.html",
  "targets": {
    "main": false,
    "node": {
      "context": "node",
      "outputFormat": "commonjs",
      "source": "src/server/index.ts",
      "distDir": "dist/server"
    },
    "dev": {
      "source": "src/client/index.html",
      "distDir": "dist/client",
      "publicUrl": "/"
    }
  },
  "engines": {
    "node": "20"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=development vite-node ./src/server/index.ts",
    "start:client": "cross-env NODE_ENV=development vite dev ./src/client --port 4443",
    "build": "cross-env NODE_ENV=production yarn clean:dist && yarn build:prod && yarn copy:assets",
    "clean:dist": "rimraf dist",
    "copy:assets": "mkdir -p dist/client/ && cp -rn public/. dist/client/",
    "build:prod": "yarn clean:dist && concurrently \"yarn build:index\" \"yarn build:routes\" \"yarn build:server\"",
    "build:index": "vite build ./src/client/ --outDir ../../dist/client --config vite.config.index.js",
    "build:routes": "vite build ./src/client/ --outDir ../../dist/client --config vite.config.routes.js",
    "build:server": "vite build --outDir dist/server --ssr src/server/index.ts --config vite.config.server.js",
    "preview": "cross-env NODE_ENV=production node dist/server/index.js",
    "serve": "cross-env NODE_ENV=production node dist/server/index.js",
    "debug": "node --inspect-brk server",
    "pretty": "prettier \"src/**/*.{js,ts,html,css,scss}\" --write",
    "pretty:check": "prettier \"src/**/*.{js,ts,html,css,scss}\" --check",
    "lint": "eslint src/**/**/*.ts --fix",
    "test": "echo \"No tests specified\""
  },
  "dependencies": {
    "@lit-labs/ssr": "^3.2.2",
    "@readymade/core": "3.0.0-beta.0",
    "@readymade/dom": "3.0.0-beta.0",
    "@readymade/router": "3.0.0-beta.0",
    "@ungap/custom-elements": "^1.3.0",
    "autoprefixer": "^10.4.20",
    "broadcastchannel-polyfill": "^1.0.1",
    "chalk": "^5.3.0",
    "compression": "^1.7.4",
    "concurrently": "^9.0.1",
    "cors": "^2.8.5",
    "element-internals-polyfill": "^1.3.12",
    "express": "^4.17.1",
    "html-minifier-terser": "^7.2.0",
    "http": "^0.0.0",
    "https": "^1.0.0",
    "lit-html": "^3.2.0",
    "node-fetch": "2.6.7",
    "node-window-polyfill": "^1.0.2",
    "prismjs": "^1.29.0",
    "rimraf": "^6.0.1"
  },
  "devDependencies": {
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@esbuild-plugins/node-modules-polyfill": "^0.2.2",
    "@eslint/js": "^9.12.0",
    "@rollup/plugin-commonjs": "^28.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-replace": "^6.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.0",
    "@rollup/plugin-url": "^8.0.2",
    "@types/express": "^5.0.0",
    "@types/node": "^22.7.4",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "chokidar": "^4.0.1",
    "chromedriver": "^129.0.2",
    "cross-env": "^7.0.3",
    "cssnano": "^7.0.6",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "glob": "^11.0.0",
    "globals": "^15.10.0",
    "helmet": "^8.0.0",
    "htmlnano": "^2.1.1",
    "http-server": "^14.1.1",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "postcss": "^8.2.15",
    "posthtml": "^0.16.6",
    "posthtml-inline": "^1.0.0",
    "prettier": "^3.3.3",
    "rollup": "4.24.0",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-inline-postcss": "^3.0.1",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "rollup-plugin-module-replacement": "^1.2.1",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "rollup-plugin-polyfill-node": "^0.13.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-string-html": "^1.0.0",
    "sass": "^1.79.4",
    "stream-browserify": "3",
    "tachometer": "^0.7.1",
    "tslib": "~2.7.0",
    "typescript": "~5.5.0",
    "typescript-eslint": "^8.8.0",
    "vite": "^5.4.8",
    "vite-node": "^2.1.2",
    "vite-plugin-html": "^3.2.2",
    "vite-plugin-node-polyfills": "^0.22.0",
    "vite-plugin-standard-css-modules": "^0.0.11",
    "vite-plugin-static-copy": "^1.0.6"
  },
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "externals": [
    "./src/server/config.js"
  ],
  "packageManager": "yarn@4.5.0"
}
