{
    "compilerOptions": {
        "baseUrl": "./src",
        "paths": {
            "*": [
                "client/*",
                "server/*"
            ]
        },
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "node",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "noImplicitAny": false,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "strictNullChecks": false
    },
    "include": [
        "src/**/*"
    ],
    "allowJS": true
}